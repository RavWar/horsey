!!! 5
%html#no-js{:lang => "ru"}
  %head
    = csrf_meta_tag
    %meta{:charset => "utf-8"}
    %title= @meta_title || "Велоконь"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "keywords"}
    %meta{:name => "viewport", :content => "width=1280, user-scalable=no"}
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}
    %link{:href => "http://fonts.googleapis.com/css?family=Bad+Script&subset=latin,cyrillic", :rel => "stylesheet"}
    = stylesheet_link_tag :app, :media => "all"

    %meta{:property => "og:title", :content => "Наконяшимся!"}
    %meta{:property => "og:description", :content => "Велоконь: игра о жизни, смерти и коне #velogame"}
    %meta{:property => "og:url", :content => "http://velogame.pro"}
    %meta{:property => "og:image", :content => "http://velogame.pro/i/share.png"}
    %meta{:name => "title", :content => "Наконяшимся!"}
    %meta{:name => "description", :content => "Велоконь: игра о жизни, смерти и коне #velogame"}
    %link{:rel => "image_src", :href => "http://velogame.pro/i/share.png"}

  %body
    - if flash[:notice]
      .message= flash[:notice]

    = yield

    = javascript_include_tag :app
    = yield :javascript

    = render 'shared/analytics'
